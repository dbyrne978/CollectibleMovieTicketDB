@* Displays a MudCard for each ticket in the database. *@
@using CollectibleMovieTicketDB.Model

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.Medium">
    <MudGrid>
        @foreach (var ticket in tickets)
        {
            <MudItem xs="12" sm="6" md="3">
                <MudCard>
                    <MudCardMedia Image="@ticket.ImageUrl" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.h5">@ticket.MovieTitle</MudText>

                        <MudText Typo="Typo.body2"><b>Showing Date:</b> @ticket.ShowingDate</MudText>
                        <MudText Typo="Typo.body2"><b>Collector Number:</b> @ticket.CollectorNumber</MudText>
                        <MudText Typo="Typo.body2"><b>Variation:</b> @ticket.Variation</MudText>
                        <MudText Typo="Typo.body2"><b>Estimated Secondary Market Value:</b> $ @ticket.EstimatedEbaySalePrice</MudText>

                        @*<MudChip Icon="@Icons.Material.Filled.AutoAwesome" Label="true" Color="Color.Primary" Align="Align.Right">@ticket.CollectorNumber</MudChip>*@
                        <MudText Typo="Typo.h5" Align="Align.Right">@ticket.CollectorNumber @ticket.Variation</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>
}

